@{
    ViewData["Title"] = "Conversor de Unidades";
}

@model ConversorUnidades

<div class="row">
    <div class="col-6 m-auto">
        <form asp-controller="ConversorUnidades" asp-action="Index" method="post">
            <div class="card">
                <div class="card-header">
                    Conversor de Unidades
                </div>

                <div class="card-body">
                    <div class="mb-2">
                        <label class="form-label">Valor a Convertir</label>
                        <input asp-for="Valor" class="form-control" placeholder="Ingresa el valor" />
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Unidad de Origen</label>
                        <select asp-for="UnidadOrigenId" class="form-control">
                            @foreach (var unidad in Model.ListaUnidades)
                            {
                                <option value="@unidad.Id">@unidad.Nombre</option>
                            }
                        </select>
                    </div>

                    <div class="mb-2">
                        <label class="form-label">Unidad de Destino</label>
                        <select asp-for="UnidadDestinoId" class="form-control">
                            @foreach (var unidad in Model.ListaUnidades)
                            {
                                <option value="@unidad.Id">@unidad.Nombre</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="card-footer">
                    <button type="submit" class="btn btn-primary">Convertir</button>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="row">
    <div class="col-6 m-auto">
        @if (Model != null && Model.Resultado != 0)
        {
            <div class="alert alert-success mt-4">
                Resultado: @Model.Resultado
            </div>
        }
    </div>
</div>
